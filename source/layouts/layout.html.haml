%html
  %head
    -# Page setup options
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %meta{content: "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no"}/
    -# HTML Site info
    %meta{name: 'description', content: data.meta.content.description}/
    %title= current_page.data.title || data.meta.content.title
    %link{rel: "canonical", href: "http://www.firestormforum.org/"}/
    = favicon_link_tag(source='firestorm_mark.ico', options={})
    -# Open Graph info
    %meta{property: 'og:title', content: data.meta.content.title}/
    %meta{property: 'og:description', content: data.meta.content.description}/
    %meta{property: 'og:type', content: 'website'}/
    %meta{property: 'og:image', content: data.meta.content.image}/
    %meta{property: 'og:url', content: 'http://www.firestormforum.org/'}/
    -# Twitter Card info
    %meta{name: "twitter:title", content:data.meta.content.title}/
    %meta{name: "twitter:description", content:data.meta.content.description}/
    %meta{name: "twitter:card", content:"summary"}/
    %meta{name: "twitter:site", content:"@dailydripcom"}/
    %meta{name: "twitter:image", content:data.meta.content.image}/
    -# External References
    = stylesheet_link_tag "application"
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js'
    = javascript_include_tag "application.js"
  %body._primary-font
    = partial('layouts/marketing/navigation')
    = yield
